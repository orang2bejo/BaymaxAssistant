# Production Environment Variables
# Copy this file to .env and update with your actual values

# Groq API Configuration
GROQ_API_KEY=your_production_groq_key_here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_BASE_URL=https://api.groq.com/openai/v1

# Ollama Configuration for Embeddings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBED_MODEL=nomic-embed-text

# TTS Configuration
TTS_BASE_URL=http://localhost:5050
TTS_MODEL=tts-1

# RAG Store Configuration
RAG_PERSIST_DIR=/app/rag_store

# Production Settings
DEBUG=false
ENVIRONMENT=production

# Optional: ElevenLabs TTS (fallback)
# ELEVENLABS_API_KEY=your_elevenlabs_key_here
# ELEVENLABS_VOICE_ID_PRO=your_voice_id_pro
# ELEVENLABS_VOICE_ID_MAX=your_voice_id_max
# ELEVENLABS_VOICE_ID_KIDS=your_voice_id_kids

# Security Settings
# Add these for production deployment
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# SECRET_KEY=your_secret_key_here